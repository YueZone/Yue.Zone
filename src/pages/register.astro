---
import AccountCenterLayout from "../layouts/AccountCenterLayout.astro";
---

<AccountCenterLayout>
    <div class="w-full h-full flex flex-col items-center justify-center">
        <h1 class="text-4xl font-bold text-white">注册</h1>
        <form
            action="/api/auth/register"
            method="post"
            class="w-full flex flex-col items-center justify-center"
        >
            <label for="email" class="text-white">
                <span>邮箱</span>
                <input type="email" name="email" id="email" />
            </label>

            <label for="password" class="text-white">
                <span>密码</span>
                <input type="password" name="password" id="password" />
            </label>
            <button
                type="submit"
                class="bg-blue-500 text-white px-4 py-2 rounded-md">注册</button
            >
        </form>
        <p class="text-white">
            已经有一个账号? <a href="/signin" class="text-blue-500">登录</a>
        </p>
    </div>
</AccountCenterLayout>
