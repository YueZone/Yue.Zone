---
interface Props {
  background?: boolean;
}

const { background } = Astro.props;
---

<header
  class="w-full h-[6.75rem] portrait:h-[9.375rem] absolute top-0 left-0 z-[23] flex items-center"
  style={background &&
    "background-image: linear-gradient(0deg, transparent, rgba(0, 0, 0, .6), rgba(0, 0, 0, .8))"}
>
  <slot />
</header>
